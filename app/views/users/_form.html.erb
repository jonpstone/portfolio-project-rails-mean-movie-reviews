<body>
  <%= form_for user do |f| %>
    <% if user.errors.any? %>
      <div class="alert alert-warning alert-dismissable">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <h3><strong>Error! </strong><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h3>
        <ul>
        <% user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %><br />
        </ul>
      </div>
    <% end %>

    <div class="check_box">
      <%= f.label :admin %>
      <%= f.check_box :admin %><br />
    </div><br />

    <div class="row">
      <div class="col-lg-4">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, class: 'form-control' %><br />

        <%= f.label :hometown %><br />
        <%= f.text_field :hometown, autofocus: true, class: 'form-control' %><br />

        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %><br />

        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %><br />

        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %><br />
      </div>
    </div>

    <div class="actions">
      <% if current_user.try(:admin?) && !review.new_record? %>
        <%= link_to "Delete", @user, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger pull-left' %>
      <% end %>
      <%= link_to 'Back', :back, class: 'btn btn-default' %>
      <%= f.submit class: 'btn btn-default' %>
    </div><br />
  <% end %>
</body>
