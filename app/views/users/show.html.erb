<% provide(:title, "#{@user.username} | Mean Review") %>

<div class="admin">
  <h2><%= "ADMIN" if current_user.admin %></h2>
</div>

<div class="info">
  Userame: <b><%= @user.username %></b>
  <% if logged_in? && current_user.provider == 'facebook' %>
    (Signed in with <%= @user.provider.capitalize %>) |
  <% else %>
    |
  <% end %>
  <% unless @user.hometown.nil? %>
    | Hometown: <b><%= @user.hometown %></b><br />
  <% end %>
</div><br />

<div class="link">
  <% if logged_in? && current_user.provider == 'facebook' %>
    <%= link_to 'Edit User', edit_user_path(@user) %> |
  <% end %>
  <%= link_to "Delete User", @user, method: :delete, data: { confirm: "Are you sure?" } %> |
  <%= link_to 'Back', :back %>
</div>
