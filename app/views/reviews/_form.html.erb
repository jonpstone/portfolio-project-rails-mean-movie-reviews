<%= form_for review do |f| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
      <% review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="select">
    <%= f.label :genre %><br />
    <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :genre_name %>
  </div><br />

  <% if !params[:writer_id] %>
    <div class="select">
      <%= f.label :writer %>
      <%= f.collection_select :writer_id, Writer.all, :id, :name, prompt: true %>
    </div><br />
  <% else %>
    <%= f.hidden_field :writer_id %>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div><br />

  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year, autofocus: true %>
  </div><br />

  <div class="field">
    <%= f.label :date_published %><br />
    <%= f.text_field :date_published, autofocus: true %>
  </div><br />

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, size: "80x80", placeholder: "Minimum 500 characters", autofocus: true %>
  </div><br />

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
