<head>
  <style>
    .label-checkbox {padding: 5px;}
  </style>
</head>
<body>
  <%= form_for review do |f| %>
    <% if review.errors.any? %>
      <div id="error_explanation">
        <h2 style="color:red;"><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>
        <ul>
        <% review.errors.full_messages.each do |msg| %>
          <li style="color:red;"><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="genre_select">
      <%= f.label :genres %><br />
      <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :genre_name) do |g| %>
        <%= g.label class: "label-checkbox" do %>
          <%= g.check_box + g.text %>
        <% end %>
      <% end %>
    </div><br />

    <% if !params[:writer_id] %>
      <div class="writer_select">
        <%= f.label :writer %></li>
        <%= f.collection_select :writer_id, Writer.all, :id, :name, prompt: true %>
      </div><br />
    <% else %>
      <%= f.hidden_field :writer_id %>
    <% end %>

    <div class="field">
      <%= f.label :poster %> (Poster on view)<br />
      <%= f.file_field :image, autofocus: true %>
    </div><br />

    <div class="field">
      <%= f.label :banner %> (Banner on index)<br />
      <%= f.file_field :banner, autofocus: true %>
    </div><br />

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, autofocus: true %>
    </div><br />

    <div class="field">
      <%= f.label :year %><br />
      <%= f.text_field :year, autofocus: true %>
    </div><br />

    <div class="field">
      <%= f.label :date_published %><br />
      <%= f.text_field :date_published, autofocus: true %>
    </div><br />

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, size: "80x50", placeholder: "Minimum 500 characters", autofocus: true %>
    </div><br />

    <div class="field">
      <%= f.label :excerpt %><br />
      <%= f.text_field :excerpt, size: "80x40", autofocus: true %>
    </div><br />

    <div class="actions">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</body>
