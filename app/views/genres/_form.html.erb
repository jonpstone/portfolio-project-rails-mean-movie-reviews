<body>
  <div class="interface">

      <%= form_for @genre do |f| %>
        <% if @genre.errors.any? %>
        <div class="alert alert-warning alert-dismissable">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <h3><strong>Error! </strong><%= pluralize(@genre.errors.count, "error") %> prohibited this genre from being saved:</h3>
            <ul>
            <% @genre.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row">
          <div class="col-lg-4">
            <%= f.text_field :genre_name, autofocus: true, class: 'form-control' %>
          </div>
        </div><br />

        <div class="actions">
          <% if current_user.try(:admin?) && !genre.new_record? %>
            <%= link_to "Delete", @genre, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger pull-left' %>
          <% end %>
          <%= link_to 'Back', :back, class: 'btn btn-default' %>
          <%= f.submit class: 'btn btn-default' %>
        </div><br />
      <% end %>
  </div>
  </body>
