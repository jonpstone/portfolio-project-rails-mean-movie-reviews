<head>
  <% provide(:title, "New Genre | Mean Review") %>
  <style>
    #overflow {overflow: hidden;}
  </style>
</head>
<body>
  <div id="overflow">
    <div class="interface">

      <br /><h2 class="title">New Genre</h2><br />

      <%= form_for @genre do |f| %>
        <% if @genre.errors.any? %>
        <div class="alert alert-warning alert-dismissable">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <h3><strong>Error! </strong><%= pluralize(@genre.errors.count, "error") %> prohibited this genre from being saved:</h3>
            <ul>
            <% @genre.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.text_field :genre_name, autofocus: true %>
        </div><br />

        <div class="actions">
          <%= f.submit class: 'btn btn-default' %>
        </div><br />
      <% end %>

      <div class="links">
        <%= link_to 'Cancel', :back %>
      </div>
    </div>
  </div>
</body>
