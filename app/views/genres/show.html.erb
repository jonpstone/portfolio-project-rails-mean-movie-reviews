<head>
  <% provide(:title, "#{@genre.genre_name} Movies | Mean Review") %>
  <style>
    #gImage {margin-right: 2em; margin-bottom: 2em;}
    .actions {margin-bottom: 3em;}
    .title {margin-bottom: 1em;}
  </style>
</head>
<body>
  <main style="width:1400px;">
    <div class="interface">
      <br /><h2 class="title"><%= @genre.genre_name %></h2>

      <div class="actions">
        <%= link_to "Prev", "#", data: { id: @genre.id }, id: 'js-prev', class: 'btn btn-default' %>
        <% if current_user.try(:admin?) %>
          <%= link_to "Delete Genre", @genre, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
        <% end %>
        <%= link_to "Next", "#", data: { id: @genre.id }, id: 'js-next', class: 'btn btn-default' %>
      </div><br /><br />

      <div class="list">
        <% @genre.reviews.each do |movie| %>
            <%= link_to image_tag(
              movie.image.url,
              title: "#{movie.title} (#{movie.year})",
              id: "gImage",
              width: "200",
              height: "300"
              ), review_path(movie)%>
        <% end %>
      </div><br />
    </div>
  </main>
</body>
