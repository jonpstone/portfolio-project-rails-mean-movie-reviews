<head>
  <% provide(:title, "Critics | Mean Review") %>
</head>
<body>
  <div class="interface">
    <br /><h2 class="title">Writers and Critics</h2><br />

    <div class="list">
      <% @writers.each do |critic| %>
        <b><%= link_to critic.name, writer_path(critic) %></b> |
        <%= critic.publication %> |
        <b>Last Review <%= link_to critic.latest_review.title, review_path(critic.latest_review) %></b><br /><br />
      <% end %>
    </div><br />
    <%= link_to 'Back', :back, class: 'btn btn-default' %>
  </div>
</body>
