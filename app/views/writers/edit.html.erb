<% provide(:title, "Edit Writer | Mean Review") %>

<h2><%= "Edit: #{@writer.name}" %></h2><br />

<%= render partial: 'form', locals: { writer: @writer } %><br />

<div class="links">
  <% if current_user.try(:admin?) %>
    <%= link_to "Delete", @writer, method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
  <%= link_to 'Cancel', :back %>
</div>
