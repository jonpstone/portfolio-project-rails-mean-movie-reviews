<%= form_for writer do |f| %>
  <% if writer.errors.any? %>
    <div id="error_explanation">
      <h2 style="color:red;"><%= pluralize(writer.errors.count, "error") %> prohibited this writer from being saved:</h2>
      <ul>
      <% writer.errors.full_messages.each do |msg| %>
        <li  style="color:red;"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div><br />

  <div class="field">
    <%= f.label :publication %><br />
    <%= f.text_field :publication, autofocus: true %>
  </div><br />

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, size: "80x10", placeholder: "Minimum 100 characters", autofocus: true %>
  </div><br />

  <% if writer.new_record? %>
    <h3>Add a review for this critic</h3>

    <%= f.fields_for :reviews do |rf| %>
      <div class="select">
        <%= rf.label :genre %><br />
        <%= rf.collection_check_boxes :genre_ids, Genre.all, :id, :genre_name %>
      </div><br />

      <div class="field">
        <%= rf.label :title %><br />
        <%= rf.text_field :title %>
      </div><br />

      <div class="field">
        <%= rf.label :year %><br />
        <%= rf.text_field :year %>
      </div><br />

      <div class="field">
        <%= rf.label :date_published %><br />
        <%= rf.text_field :date_published %>
      </div><br />

      <div class="field">
        <%= rf.label :content %><br />
        <%= rf.text_area :content, placeholder: "Minimum 500 characters", size: "80x30" %>
      </div>
    <% end %>
  <% end %>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
