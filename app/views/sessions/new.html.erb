<%= form_for @user, url: sessions_create_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2 style="color:red;"><%= pluralize(@user.errors.count, "error") %> prohibited you logging in:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li style="color:red;"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br /><h2 class="title">Sign In Below</h2><br />

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div><br />

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div><br />

  <%= f.submit 'Sign In' %>
<% end %><br /><br />

<div class="oauth">
  <%= link_to(image_tag("/assets/button-facebook.png", size: "257x53"), "auth/facebook") %>
</div>
